import { motion } from "framer-motion";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Sparkles, Github, Mail, Music, Code, BookOpen, Brain } from "lucide-react";
import { useEffect, useState } from "react";

function GlitterBackground() {
  const [particles, setParticles] = useState([]);

  useEffect(() => {
    const generated = Array.from({ length: 35 }).map((_, i) => ({
      id: i,
      left: Math.random() * 100,
      size: Math.random() * 6 + 3,
      duration: Math.random() * 10 + 14,
      delay: Math.random() * 6,
    }));
    setParticles(generated);
  }, []);

  return (
    <div className="fixed inset-0 overflow-hidden pointer-events-none z-0">
      {particles.map((p) => (
        <motion.div
          key={p.id}
          initial={{ y: "110vh", opacity: 0 }}
          animate={{ y: "-10vh", opacity: [0, 1, 0] }}
          transition={{
            duration: p.duration,
            repeat: Infinity,
            delay: p.delay,
            ease: "linear",
          }}
          style={{ left: `${p.left}%` }}
          className="absolute"
        >
          <Sparkles
            style={{ width: p.size, height: p.size }}
            className="text-pink-300"
          />
        </motion.div>
      ))}
    </div>
  );
}

export default function PersonalPage() {
  return (
    <div className="relative min-h-screen bg-gradient-to-br from-pink-100 via-fuchsia-100 to-purple-100 text-slate-800 p-6 overflow-hidden">
      <GlitterBackground />

      {/* Hero */}
      <motion.div
        initial={{ opacity: 0, y: 40 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.8 }}
        className="relative z-10 text-center mt-20"
      >
        <h1 className="text-6xl font-black tracking-tight mb-4 bg-gradient-to-r from-pink-500 to-purple-500 bg-clip-text text-transparent">
          maomaomoka
        </h1>
        <p className="text-lg max-w-2xl mx-auto opacity-80">
          student · developer · biology enthusiast · dreamy k‑pop energy
        </p>

        <div className="mt-3 text-sm tracking-widest uppercase text-pink-400">
          ✧ soft code · bright mind · pastel future ✧
        </div>

        <div className="mt-8 flex justify-center gap-4 flex-wrap">
          <Button className="rounded-full shadow-xl bg-gradient-to-r from-pink-400 to-purple-400 text-white hover:scale-105 transition">
            <Github className="mr-2 h-4 w-4" /> GitHub
          </Button>
          <Button
            variant="outline"
            className="rounded-full shadow-xl border-pink-300 text-pink-600 hover:bg-pink-50"
